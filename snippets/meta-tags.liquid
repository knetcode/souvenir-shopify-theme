{%- liquid
  assign og_title = page_title
  assign og_url = canonical_url
  assign og_type = 'website'
  assign og_description = page_description | default: shop.description | default: shop.name

  if template.name == 'product'
    assign og_type = 'product'
    assign og_title = product.title | strip_html
    assign og_description = product.description | strip_html | truncate: 160
  elsif template.name == 'article'
    assign og_type = 'article'
    assign og_title = article.title | strip_html
    assign og_description = article.excerpt | default: article.content | strip_html | truncate: 160
  elsif template.name == 'collection'
    assign og_title = collection.title | strip_html
    assign og_description = collection.description | default: collection.title | strip_html | truncate: 160
  endif

  if template.name == 'product' and product.featured_media
    assign og_image = product.featured_media.preview_image
  elsif template.name == 'article' and article.image
    assign og_image = article.image
  elsif template.name == 'collection' and collection.featured_image
    assign og_image = collection.featured_image
  else
    assign og_image = settings.share_image
  endif
-%}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description | escape }}">
{%- if og_image -%}
  <meta property="og:image" content="http:{{ og_image | image_url: width: 1200 }}">
  <meta property="og:image:secure_url" content="https:{{ og_image | image_url: width: 1200 }}">
  <meta property="og:image:width" content="{{ og_image.width }}">
  <meta property="og:image:height" content="{{ og_image.height }}">
{%- endif -%}
<meta name="twitter:site" content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | prepend: '@' }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">
{%- if og_image -%}
  <meta name="twitter:image" content="https:{{ og_image | image_url: width: 1200 }}">
{%- endif -%}
