{% schema %}
{
  "name": "Product Main",
  "settings": [
    {
      "type": "text",
      "id": "free_product_message",
      "label": "Free Product Message",
      "default": "This itinerary is currently available for free during our MVP launch.",
      "info": "Message displayed when product price is $0.00"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "add_to_cart_text",
      "label": "Add to Cart Button Text",
      "default": "Add to Cart"
    }
  ],
  "presets": [
    {
      "name": "Product Main"
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
  assign text_color = section.settings.text_color | default: '#1a1a1a'
  assign add_to_cart_text = section.settings.add_to_cart_text | default: 'Add to Cart'
-%}

<div class="product-main-wrapper" style="background-color: {{ bg_color }}; color: {{ text_color }};">
  <div class="container product-main-container">
    {%- if product.type != blank -%}
      <p class="product-type">{{ product.type }}</p>
    {%- endif -%}

    {%- comment -%} Product Section {%- endcomment -%}
    <div class="product-grid">
      {%- comment -%} Product Info {%- endcomment -%}
      <div class="product-info">
        <h1 class="product-title">{{ product.title }}</h1>

        {%- comment -%} Price Display - Free or Regular {%- endcomment -%}
        <div class="product-price-wrapper">
          {%- if product.price == 0 -%}
            {%- comment -%} FREE: Show FREE label {%- endcomment -%}
            <p class="product-price product-price-free">FREE</p>
          {%- else -%}
            {%- comment -%} REGULAR: Show normal price {%- endcomment -%}
            <p class="product-price">{{ product.price | money }}</p>
          {%- endif -%}
        </div>

        {%- comment -%} Product Form - Only show if product has a price {%- endcomment -%}
        {%- if product.price > 0 -%}
          {% form 'product', product, id: 'product-form' %}
            {%- comment -%} Variants {%- endcomment -%}
            {%- unless product.has_only_default_variant -%}
              {%- for option in product.options_with_values -%}
                <div class="product-variant-option">
                  <p class="product-variant-label">{{ option.name }}</p>
                  <div class="product-variant-values">
                    {%- for value in option.values -%}
                      <input
                        type="radio"
                        id="option-{{ option.position }}-{{ forloop.index0 }}"
                        name="options[{{ option.name }}]"
                        value="{{ value }}"
                        {% if option.selected_value == value %}
                          checked
                        {% endif %}
                        class="variant-option"
                      >
                      <label
                        for="option-{{ option.position }}-{{ forloop.index0 }}"
                        class="variant-label"
                      >
                        {{ value }}
                      </label>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endfor -%}
            {%- endunless -%}

            {%- comment -%} Quantity {%- endcomment -%}
            <div class="product-quantity-wrapper">
              <p class="product-quantity-label">Qty</p>
              <div class="product-quantity-controls">
                <button
                  type="button"
                  class="quantity-button quantity-decrease"
                >
                  -
                </button>
                <input
                  type="number"
                  name="quantity"
                  value="1"
                  min="1"
                  class="quantity-input"
                  id="quantity"
                >
                <button
                  type="button"
                  class="quantity-button quantity-increase"
                >
                  +
                </button>
              </div>
            </div>

            {%- comment -%} Add to Cart Button {%- endcomment -%}
            <button
              type="submit"
              class="product-add-to-cart-button"
            >
              {{ add_to_cart_text }}
            </button>
          {% endform %}
        {%- else -%}
          {%- comment -%} FREE PRODUCT: Show message instead of form {%- endcomment -%}
          {%- assign free_message = section.settings.free_product_message | default: "This itinerary is currently available for free during our MVP launch." -%}
          <div class="product-free-message">
            <p class="product-free-message-text">{{ free_message }}</p>
          </div>
        {%- endif -%}

        {%- comment -%} Product Description (non-accordion content) {%- endcomment -%}
        {%- if product.description != blank -%}
          <div class="product-description-intro text-gray">
            {{ product.description }}
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Product Images {%- endcomment -%}
      <div class="product-images">
        {%- if product.featured_image != blank -%}
          <div class="product-image-main-wrapper">
            {{
              product.featured_image
              | image_url: width: 600
              | image_tag: loading: 'eager', alt: product.title, class: 'product-image-main', id: 'product-image-main'
            }}
          </div>
        {%- endif -%}

        {%- if product.images.size > 1 -%}
          <div class="product-thumbnails">
            {%- for image in product.images limit: 5 -%}
              <button
                class="product-thumbnail"
                data-image-url="{{ image | image_url: width: 600 }}"
              >
                {{
                  image
                  | image_url: width: 100
                  | image_tag: loading: 'lazy', alt: product.title, class: 'product-thumbnail-image'
                }}
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Full-width Accordion Section {%- endcomment -%}
    {%- if product.description != blank -%}
      <div class="product-description-accordion-container">
        <div class="product-description-accordion text-gray">
          {{ product.description }}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const thumbnails = document.querySelectorAll('.product-thumbnail');
    const mainImage = document.getElementById('product-image-main');

    thumbnails.forEach((thumb) => {
      thumb.addEventListener('click', function () {
        const imageUrl = this.getAttribute('data-image-url');
        if (mainImage && imageUrl) {
          mainImage.src = imageUrl;
        }
      });
    });

    const quantityInput = document.getElementById('quantity');
    const decreaseBtn = document.querySelector('.quantity-decrease');
    const increaseBtn = document.querySelector('.quantity-increase');

    if (decreaseBtn && quantityInput) {
      decreaseBtn.addEventListener('click', function () {
        const current = parseInt(quantityInput.value) || 1;
        quantityInput.value = Math.max(1, current - 1);
      });
    }

    if (increaseBtn && quantityInput) {
      increaseBtn.addEventListener('click', function () {
        const current = parseInt(quantityInput.value) || 1;
        quantityInput.value = current + 1;
      });
    }
  });

  // Convert h5 tags in product description to accordions
  (function() {
    const introContainer = document.querySelector('.product-description-intro');
    const accordionContainer = document.querySelector('.product-description-accordion');
    if (!accordionContainer) return;

    const h5Elements = accordionContainer.querySelectorAll('h5');
    if (h5Elements.length === 0) {
      // No h5s found, hide the accordion container
      const container = document.querySelector('.product-description-accordion-container');
      if (container) container.style.display = 'none';
      return;
    }

    // Remove h5s and their content from intro container
    if (introContainer) {
      const introH5s = introContainer.querySelectorAll('h5');
      introH5s.forEach(h5 => {
        let node = h5.nextSibling;
        // Remove h5 and all following content until next h5 or end
        while (node) {
          const nextH5 = node.nodeType === 1 && node.tagName === 'H5';
          if (nextH5) break;
          const nextNode = node.nextSibling;
          node.remove();
          node = nextNode;
        }
        h5.remove();
      });
    }

    // Create accordion wrapper
    const accordionWrapper = document.createElement('div');
    accordionWrapper.className = 'itinerary-accordion';
    
    let isFirst = true;
    const h5Array = Array.from(h5Elements);

    // Process each h5 and its following content
    h5Array.forEach((h5, index) => {
      // Create accordion item
      const accordionItem = document.createElement('div');
      accordionItem.className = 'accordion-item';
      
      // Create button from h5
      const button = document.createElement('button');
      button.className = 'accordion-button';
      button.type = 'button';
      button.setAttribute('aria-expanded', isFirst ? 'true' : 'false');
      button.innerHTML = `
        <span>${h5.textContent}</span>
        <svg class="accordion-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 9l6 6 6-6" />
        </svg>
      `;
      
      // Create content panel
      const panel = document.createElement('div');
      panel.className = 'accordion-panel';
      panel.style.display = isFirst ? 'block' : 'none';
      
      // Collect content between this h5 and the next h5 (or end)
      let node = h5.nextSibling;
      const nodesToMove = [];
      
      while (node) {
        const nextH5 = node.nodeType === 1 && node.tagName === 'H5';
        if (nextH5) break;
        
        nodesToMove.push(node);
        node = node.nextSibling;
      }
      
      // Move nodes to panel
      nodesToMove.forEach(n => panel.appendChild(n));
      
      // Remove the h5 from original
      h5.remove();
      
      // Assemble accordion item
      accordionItem.appendChild(button);
      accordionItem.appendChild(panel);
      accordionWrapper.appendChild(accordionItem);
      
      // Add click handler
      button.addEventListener('click', function() {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        const panel = this.nextElementSibling;
        
        // Close all other panels
        accordionWrapper.querySelectorAll('.accordion-button').forEach(btn => {
          if (btn !== this) {
            btn.setAttribute('aria-expanded', 'false');
            btn.nextElementSibling.style.display = 'none';
          }
        });
        
        // Toggle current panel
        this.setAttribute('aria-expanded', !isExpanded);
        panel.style.display = !isExpanded ? 'block' : 'none';
      });
      
      isFirst = false;
    });
    
    // Replace original content with accordion
    accordionContainer.innerHTML = '';
    accordionContainer.appendChild(accordionWrapper);
  })();
</script>

