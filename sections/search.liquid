{% schema %}
{
  "name": "Search",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Search"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Search Placeholder",
      "default": "Search..."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Search"
    },
    {
      "type": "text",
      "id": "no_results_text",
      "label": "No Results Text",
      "default": "No results found"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Search"
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
  assign text_color = section.settings.text_color | default: '#1a1a1a'
  assign padding_top = section.settings.padding_top | default: 32
  assign padding_bottom = section.settings.padding_bottom | default: 32
  assign title = section.settings.title | default: 'general.search.title' | t | default: 'Search'
  assign placeholder = section.settings.placeholder | default: 'general.search.placeholder' | t | default: 'Search...'
  assign button_text = section.settings.button_text | default: 'general.search.submit' | t | default: 'Search'
  assign no_results_text = section.settings.no_results_text | default: 'general.search.no_results' | t | default: 'No results found'
-%}

<div class="px-6" style="background-color: {{ bg_color }}; color: {{ text_color }}; padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;">
  <div class="container">
    <h1 class="text-3xl mb-8" style="color: {{ text_color }};">
      {%- if search.performed -%}
        {{ 'general.search.results_for' | t: terms: search.terms | default: title }}
      {%- else -%}
        {{ title }}
      {%- endif -%}
    </h1>

    <form action="{{ routes.search_url }}" method="get" class="mb-8">
      <input
        type="search"
        name="q"
        value="{{ search.terms }}"
        placeholder="{{ placeholder }}"
        class="newsletter-input"
        id="search"
      >
      <button type="submit" class="btn-primary mt-4">
        {{ button_text }}
      </button>
    </form>

    {%- if search.performed -%}
      {%- if search.results.size > 0 -%}
        <div class="grid md:grid-cols-4 gap-6">
          {%- for item in search.results -%}
            <article>
              <a href="{{ item.url }}">
                {%- if item.featured_image != blank -%}
                  <div class="relative aspect-4-3 overflow-hidden mb-4">
                    {{
                      item.featured_image
                      | image_url: width: 400
                      | image_tag: loading: 'lazy', alt: item.title, class: 'object-cover'
                    }}
                  </div>
                {%- endif -%}
                <h3 class="text-base mb-2" style="color: {{ text_color }};">{{ item.title }}</h3>
                {%- if item.price -%}
                  <p class="text-gray">
                    {%- if item.price == 0 -%}
                      FREE
                    {%- else -%}
                      {{ item.price | money }}
                    {%- endif -%}
                  </p>
                {%- endif -%}
              </a>
            </article>
          {%- endfor -%}
        </div>
      {%- else -%}
        <p class="text-gray">{{ no_results_text }}</p>
      {%- endif -%}
    {%- endif -%}
  </div>
</div>
