{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#6b7280"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#e5e7eb"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
  assign text_color = section.settings.text_color | default: '#6b7280'
  assign border_color = section.settings.border_color | default: '#e5e7eb'
  assign padding_top = section.settings.padding_top | default: 32
  assign padding_bottom = section.settings.padding_bottom | default: 32
-%}

<footer class="footer-wrapper" style="background-color: {{ bg_color }}; --footer-text-color: {{ text_color }}; --footer-border-color: {{ border_color }}; --footer-padding-top: {{ padding_top }}px; --footer-padding-bottom: {{ padding_bottom }}px;">
  {%- comment -%} Bottom Footer {%- endcomment -%}
  <section class="footer-bottom">
    <div class="container footer-content">
      <p class="footer-copyright">Copyright Â© {{ 'now' | date: '%Y' }} {{ shop.name }}</p>
      
      <nav class="footer-nav">
        {%- for link in linklists.footer.links -%}
          <a href="{{ link.url }}" class="footer-nav-link">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </nav>
    </div>
  </section>
</footer>

<style>
  .footer-wrapper {
    width: 100%;
  }

  .footer-bottom {
    border-top: 1px solid var(--footer-border-color, var(--gray-200));
    padding-top: var(--footer-padding-top, 2rem);
    padding-bottom: var(--footer-padding-bottom, 2rem);
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      gap: 1.5rem;
    }
  }

  .footer-copyright {
    color: var(--footer-text-color, var(--gray-500));
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-copyright {
      text-align: left;
    }
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.75rem;
  }

  @media (min-width: 640px) {
    .footer-nav {
      flex-direction: row;
      gap: 1.5rem;
    }
  }

  .footer-nav-link {
    white-space: nowrap;
    transition: opacity 0.15s;
    color: var(--footer-text-color, inherit);
  }

  .footer-nav-link:hover {
    opacity: 0.7;
  }
</style>
