{% schema %}
{
  "name": "Welcome Section",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Welcome to Souvenir"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "A place to find real travel itineraries by trusted creative parents with the insights you actually need to know."
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Discover more"
    }
  ],
  "presets": [
    {
      "name": "Welcome Section"
    }
  ]
}
{% endschema %}

<section class="py-16 px-6 text-center max-w-3xl mx-auto">
  <p class="text-xs uppercase tracking-wider text-gray mb-4">
    {{ section.settings.label }}
  </p>
  <h2 class="text-2xl md:text-3xl lg:text-4xl leading-relaxed mb-6">
    {{ section.settings.heading }}
  </h2>
  {%- if section.settings.link != blank -%}
    <a href="{{ section.settings.link }}" class="read-more">
      {{ section.settings.link_text }}
    </a>
  {%- endif -%}
</section>
