{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign section_class = 'section-collection-carousel'
  assign selected_collections = section.settings.collections
-%}

{%- if selected_collections != blank and selected_collections.count > 0 -%}
  <section
    id="{{ section_id }}"
    class="{{ section_class }} py-12 px-6"
    style="
      --section-padding-top: {{ section.settings.padding_top }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color: {{ section.settings.background_color | default: '#ffffff' }};
    "
  >
    <div class="container">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-3xl md:text-4xl mb-8 uppercase tracking-wide">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      <div class="collection-carousel-wrapper">
        {%- comment -%} Previous Arrow {%- endcomment -%}
        <button class="carousel-arrow carousel-arrow-prev" aria-label="Previous">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
        </button>

        <div class="collection-carousel">
          {%- for collection in selected_collections -%}
            <article class="collection-card">
              <a href="{{ collection.url }}">
                {%- if collection.image != blank -%}
                  <div class="collection-card-image-wrapper">
                    {{
                      collection.image
                      | image_url: width: 400
                      | image_tag:
                        loading: 'lazy',
                        alt: collection.title,
                        class: 'collection-card-image'
                    }}
                  </div>
                {%- elsif collection.products.first.featured_image != blank -%}
                  <div class="collection-card-image-wrapper">
                    {{
                      collection.products.first.featured_image
                      | image_url: width: 400
                      | image_tag:
                        loading: 'lazy',
                        alt: collection.title,
                        class: 'collection-card-image'
                    }}
                  </div>
                {%- else -%}
                  <div class="collection-card-placeholder">
                    <span class="text-gray text-sm">No image</span>
                  </div>
                {%- endif -%}

                {%- if section.settings.show_product_count -%}
                  <p class="collection-card-category">
                    {{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}
                  </p>
                {%- endif -%}

                <h3 class="collection-card-title">
                  {{ collection.title }}
                </h3>

                {%- if section.settings.show_description and collection.description != blank -%}
                  <p class="collection-card-excerpt">
                    {{ collection.description | strip_html | truncate: section.settings.description_length }}
                  </p>
                {%- endif -%}

                {%- if section.settings.show_shop_now -%}
                  <span class="read-more text-sm">{{ section.settings.shop_now_text }}</span>
                {%- endif -%}
              </a>
            </article>
          {%- endfor -%}

          {%- if section.settings.show_view_all and section.settings.view_all_link != blank -%}
            <div class="collection-card collection-card-view-all">
              <a href="{{ section.settings.view_all_link }}" class="btn-primary">
                {{ section.settings.view_all_text }}
              </a>
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} Next Arrow {%- endcomment -%}
        <button class="carousel-arrow carousel-arrow-next" aria-label="Next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 18l6-6-6-6"/>
          </svg>
        </button>

        {%- comment -%} Scrollbar {%- endcomment -%}
        <div class="carousel-scrollbar">
          <div class="carousel-scrollbar-track">
            <div class="carousel-scrollbar-thumb"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
{%- endif -%}

{% stylesheet %}
  .{{ section_class }} {
    padding-top: var(--section-padding-top, 40px);
    padding-bottom: var(--section-padding-bottom, 40px);
  }

  /* Carousel wrapper with arrows */
  .{{ section_class }} .collection-carousel-wrapper {
    position: relative;
  }

  /* Carousel container */
  .{{ section_class }} .collection-carousel {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .{{ section_class }} .collection-carousel::-webkit-scrollbar {
    display: none;
  }

  /* Navigation Arrows */
  .{{ section_class }} .carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-100%);
    width: 48px;
    height: 48px;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .{{ section_class }} .carousel-arrow:hover {
    background: #f9fafb;
    border-color: #d1d5db;
  }

  .{{ section_class }} .carousel-arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .{{ section_class }} .carousel-arrow-prev {
    left: -24px;
  }

  .{{ section_class }} .carousel-arrow-next {
    right: -24px;
  }

  @media (max-width: 768px) {
    .{{ section_class }} .carousel-arrow {
      width: 40px;
      height: 40px;
    }

    .{{ section_class }} .carousel-arrow-prev {
      left: -12px;
    }

    .{{ section_class }} .carousel-arrow-next {
      right: -12px;
    }
  }

  /* Scrollbar */
  .{{ section_class }} .carousel-scrollbar {
    margin-top: 1.5rem;
    padding: 0 48px;
  }

  .{{ section_class }} .carousel-scrollbar-track {
    height: 2px;
    background: #e5e7eb;
    border-radius: 1px;
    position: relative;
  }

  .{{ section_class }} .carousel-scrollbar-thumb {
    height: 100%;
    background: #1f2937;
    border-radius: 1px;
    position: absolute;
    left: 0;
    top: 0;
    min-width: 40px;
    transition: width 0.1s ease, left 0.1s ease;
  }

  /* Card styling - fixed width for uniform appearance */
  .{{ section_class }} .collection-card {
    flex-shrink: 0;
    width: 256px;
    scroll-snap-align: start;
  }

  @media (min-width: 768px) {
    .{{ section_class }} .collection-card {
      width: 320px;
    }
  }

  /* Card image container with 4:5 aspect ratio */
  .{{ section_class }} .collection-card-image-wrapper {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  /* Placeholder for missing images */
  .{{ section_class }} .collection-card-placeholder {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    margin-bottom: 1rem;
    background-color: #f3f4f6;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Card image - absolute positioning to fill container */
  .{{ section_class }} .collection-card-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .{{ section_class }} .collection-card:hover .collection-card-image {
    transform: scale(1.05);
  }

  /* Typography */
  .{{ section_class }} .collection-card-category {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6b7280;
    margin-bottom: 0.25rem;
  }

  .{{ section_class }} .collection-card-title {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .{{ section_class }} .collection-card-excerpt {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* View All card styling */
  .{{ section_class }} .collection-card-view-all {
    display: flex;
    align-items: center;
    justify-content: center;
  }
{% endstylesheet %}

{% javascript %}
  (function () {
    const containers = document.querySelectorAll('.section-collection-carousel .collection-carousel-wrapper');

    containers.forEach((container) => {
      const carousel = container.querySelector('.collection-carousel');
      const prevBtn = container.querySelector('.carousel-arrow-prev');
      const nextBtn = container.querySelector('.carousel-arrow-next');
      const thumb = container.querySelector('.carousel-scrollbar-thumb');

      if (!carousel || !prevBtn || !nextBtn || !thumb) return;

      const cardWidth = carousel.querySelector('.collection-card')?.offsetWidth || 320;
      const gap = 16;
      const scrollAmount = cardWidth + gap;

      function updateScrollbar() {
        const scrollLeft = carousel.scrollLeft;
        const scrollWidth = carousel.scrollWidth - carousel.clientWidth;
        const thumbWidth = Math.max((carousel.clientWidth / carousel.scrollWidth) * 100, 10);
        const thumbPosition = scrollWidth > 0 ? (scrollLeft / scrollWidth) * (100 - thumbWidth) : 0;

        thumb.style.width = thumbWidth + '%';
        thumb.style.left = thumbPosition + '%';

        prevBtn.disabled = scrollLeft <= 0;
        nextBtn.disabled = scrollLeft >= scrollWidth - 1;
      }

      prevBtn.addEventListener('click', () => {
        carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
      });

      nextBtn.addEventListener('click', () => {
        carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      });

      carousel.addEventListener('scroll', updateScrollbar);
      window.addEventListener('resize', updateScrollbar);

      updateScrollbar();
    });
  })();
{% endjavascript %}

{% schema %}
{
  "name": "Collection Carousel",
  "tag": "section",
  "class": "collection-carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Collections"
    },
    {
      "type": "header",
      "content": "Collections"
    },
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Select Collections",
      "limit": 20
    },
    {
      "type": "header",
      "content": "Display Settings"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show collection description",
      "default": false
    },
    {
      "type": "range",
      "id": "description_length",
      "label": "Description length (characters)",
      "min": 50,
      "max": 200,
      "step": 10,
      "default": 100
    },
    {
      "type": "checkbox",
      "id": "show_shop_now",
      "label": "Show 'Shop Now' link",
      "default": true
    },
    {
      "type": "text",
      "id": "shop_now_text",
      "label": "Shop Now text",
      "default": "Shop Now"
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": false
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All link"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All button text",
      "default": "View All Collections"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom Section ID"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Collection Carousel"
    }
  ]
}
{% endschema %}
