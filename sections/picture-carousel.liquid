{%- liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign section_class = 'section-picture-carousel'
-%}

{%- if section.blocks.size > 0 -%}
  <section
    id="{{ section_id }}"
    class="{{ section_class }} py-12 px-6"
    style="
      --section-padding-top: {{ section.settings.padding_top }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    "
  >
    <div class="container">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-3xl md:text-4xl mb-8 uppercase tracking-wide">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      <div class="picture-carousel-wrapper">
        {%- comment -%} Previous Arrow {%- endcomment -%}
        <button class="carousel-arrow carousel-arrow-prev" aria-label="Previous">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
        </button>

        <div class="picture-carousel flex gap-4 overflow-x-auto pb-4 snap-x snap-mandatory scrollbar-hide">
          {%- for block in section.blocks -%}
            <div class="picture-card flex-shrink-0 w-64 md:w-80 snap-start">
              {%- if block.settings.image != blank -%}
                <div class="relative aspect-4-5 overflow-hidden">
                  {{
                    block.settings.image
                    | image_url: width: 400
                    | image_tag:
                      loading: 'lazy',
                      alt: block.settings.alt_text | default: 'Image',
                      class: 'picture-card-image absolute inset-0 w-full h-full object-cover'
                  }}
                </div>
              {%- else -%}
                <div class="relative aspect-4-5 overflow-hidden bg-gray-100 flex items-center justify-center">
                  <span class="text-gray text-sm">No image</span>
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>

        {%- comment -%} Next Arrow {%- endcomment -%}
        <button class="carousel-arrow carousel-arrow-next" aria-label="Next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 18l6-6-6-6"/>
          </svg>
        </button>

        {%- comment -%} Scrollbar {%- endcomment -%}
        <div class="carousel-scrollbar">
          <div class="carousel-scrollbar-track">
            <div class="carousel-scrollbar-thumb"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
{%- endif -%}

{% stylesheet %}
  .{{ section_class }} {
    padding-top: var(--section-padding-top, 40px);
    padding-bottom: var(--section-padding-bottom, 40px);
  }

  /* Carousel wrapper with arrows */
  .{{ section_class }} .picture-carousel-wrapper {
    position: relative;
    width: calc(100% + 3rem);
    margin-left: -1.5rem;
    margin-right: -1.5rem;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .{{ section_class }} .picture-carousel {
    scroll-behavior: smooth;
    padding-left: 48px;
    padding-right: 48px;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Navigation Arrows */
  .{{ section_class }} .carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-100%);
    width: 48px;
    height: 48px;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .{{ section_class }} .carousel-arrow:hover {
    background: #f9fafb;
    border-color: #d1d5db;
  }

  .{{ section_class }} .carousel-arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .{{ section_class }} .carousel-arrow-prev {
    left: 1.5rem;
  }

  .{{ section_class }} .carousel-arrow-next {
    right: 1.5rem;
  }

  @media (max-width: 768px) {
    .{{ section_class }} .carousel-arrow {
      width: 40px;
      height: 40px;
    }

    .{{ section_class }} .picture-carousel-wrapper {
      width: calc(100% + 3rem);
      margin-left: -1.5rem;
      margin-right: -1.5rem;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .{{ section_class }} .picture-carousel {
      padding-left: 40px;
      padding-right: 40px;
    }

    .{{ section_class }} .carousel-arrow-prev {
      left: 1.5rem;
    }

    .{{ section_class }} .carousel-arrow-next {
      right: 1.5rem;
    }
  }

  /* Scrollbar */
  .{{ section_class }} .carousel-scrollbar {
    margin-top: 1.5rem;
    padding: 0 48px;
  }

  .{{ section_class }} .carousel-scrollbar-track {
    height: 2px;
    background: #e5e7eb;
    border-radius: 1px;
    position: relative;
  }

  .{{ section_class }} .carousel-scrollbar-thumb {
    height: 100%;
    background: #1f2937;
    border-radius: 1px;
    position: absolute;
    left: 0;
    top: 0;
    min-width: 40px;
    transition: width 0.1s ease, left 0.1s ease;
  }

  /* Card image positioning - overrides global img height:auto */
  .{{ section_class }} .picture-card-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
{% endstylesheet %}

{% javascript %}
  (function () {
    const containers = document.querySelectorAll('.section-picture-carousel .picture-carousel-wrapper');

    containers.forEach((container) => {
      const carousel = container.querySelector('.picture-carousel');
      const prevBtn = container.querySelector('.carousel-arrow-prev');
      const nextBtn = container.querySelector('.carousel-arrow-next');
      const thumb = container.querySelector('.carousel-scrollbar-thumb');

      if (!carousel || !prevBtn || !nextBtn || !thumb) return;

      const cardWidth = carousel.querySelector('.picture-card')?.offsetWidth || 320;
      const gap = 16;
      const scrollAmount = cardWidth + gap;

      function updateScrollbar() {
        const scrollLeft = carousel.scrollLeft;
        const scrollWidth = carousel.scrollWidth - carousel.clientWidth;
        const thumbWidth = Math.max((carousel.clientWidth / carousel.scrollWidth) * 100, 10);
        const thumbPosition = scrollWidth > 0 ? (scrollLeft / scrollWidth) * (100 - thumbWidth) : 0;

        thumb.style.width = thumbWidth + '%';
        thumb.style.left = thumbPosition + '%';

        prevBtn.disabled = scrollLeft <= 0;
        nextBtn.disabled = scrollLeft >= scrollWidth - 1;
      }

      prevBtn.addEventListener('click', () => {
        carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
      });

      nextBtn.addEventListener('click', () => {
        carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
      });

      carousel.addEventListener('scroll', updateScrollbar);
      window.addEventListener('resize', updateScrollbar);

      updateScrollbar();
    });
  })();
{% endjavascript %}

