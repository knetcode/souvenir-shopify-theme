{% schema %}
{
  "name": "Article Main",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#6b6b6b"
    },
    {
      "type": "color",
      "id": "breadcrumb_color",
      "label": "Breadcrumb Color",
      "default": "#6b6b6b"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Article Main"
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
  assign heading_color = section.settings.heading_color | default: '#1a1a1a'
  assign text_color = section.settings.text_color | default: '#6b6b6b'
  assign breadcrumb_color = section.settings.breadcrumb_color | default: '#6b6b6b'
  assign padding_top = section.settings.padding_top | default: 32
  assign padding_bottom = section.settings.padding_bottom | default: 32
-%}

<section style="background-color: {{ bg_color }}; padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;">
  <div class="container px-6 max-w-4xl">
    {%- comment -%} Breadcrumb {%- endcomment -%}
    <div class="flex items-center gap-2 text-xs uppercase tracking-wider mb-2" style="color: {{ breadcrumb_color }};">
      <a href="{{ blog.url }}" class="hover:opacity-70">{{ blog.title }}</a>
      <span>/</span>
      <span>{{ article.title }}</span>
    </div>

    {%- comment -%} Title {%- endcomment -%}
    <h1 class="text-4xl md:text-5xl mb-6" style="color: {{ heading_color }};">{{ article.title }}</h1>

    {%- comment -%} Introduction {%- endcomment -%}
    {%- if article.excerpt != blank -%}
      <p class="text-lg mb-12" style="color: {{ text_color }};">
        {{ article.excerpt }}
      </p>
    {%- endif -%}

    {%- comment -%} Hero Image {%- endcomment -%}
    {%- if article.image != blank -%}
      <div class="relative aspect-video overflow-hidden mb-12">
        {{
          article.image
          | image_url: width: 1200
          | image_tag: loading: 'eager', alt: article.title, class: 'object-cover'
        }}
      </div>
    {%- endif -%}

    {%- comment -%} Content {%- endcomment -%}
    <div class="prose prose-lg max-w-none space-y-6" style="color: {{ text_color }};">
      {{ article.content }}
    </div>
  </div>
</section>

<style>
  .prose p {
    margin-bottom: 1.5rem;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
  }
  
  .prose-lg {
    font-size: 1.125rem;
  }
  
  .max-w-none {
    max-width: none;
  }
</style>
