{% schema %}
{
  "name": "Blog Grid",
  "settings": [
    {
      "type": "range",
      "id": "articles_per_page",
      "label": "Articles per page",
      "min": 4,
      "max": 24,
      "step": 4,
      "default": 12
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "tag_color",
      "label": "Tag Color",
      "default": "#6b6b6b"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "header",
      "content": "Display"
    },
    {
      "type": "text",
      "id": "read_more_text",
      "label": "Read More Text",
      "default": "Read More"
    }
  ],
  "presets": [
    {
      "name": "Blog Grid"
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
  assign text_color = section.settings.text_color | default: '#1a1a1a'
  assign tag_color = section.settings.tag_color | default: '#6b6b6b'
  assign padding_top = section.settings.padding_top | default: 0
  assign padding_bottom = section.settings.padding_bottom | default: 32
  assign read_more_text = section.settings.read_more_text | default: 'Read More'
-%}

<div class="px-6" style="background-color: {{ bg_color }}; color: {{ text_color }}; padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;">
  <div class="container">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {%- for article in blog.articles limit: section.settings.articles_per_page -%}
        <article class="group">
          <a href="{{ article.url }}">
            {%- if article.image != blank -%}
              <div class="relative aspect-4-3 overflow-hidden mb-4">
                {{
                  article.image
                  | image_url: width: 400
                  | image_tag: loading: 'lazy', alt: article.title, class: 'object-cover transition-transform duration-300 group-hover:scale-105'
                }}
              </div>
            {%- endif -%}
            
            {%- if article.tags.size > 0 -%}
              <p class="text-xs uppercase tracking-wider mb-1" style="color: {{ tag_color }};">
                {{ article.tags.first }}
              </p>
            {%- endif -%}
            
            <h3 class="text-base mb-2" style="color: {{ text_color }};">
              {{ article.title }}
            </h3>
            
            <span class="read-more text-sm" style="color: {{ text_color }};">{{ read_more_text }}</span>
          </a>
        </article>
      {%- endfor -%}
    </div>
  </div>
</div>
