{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
  assign text_color = section.settings.text_color | default: '#1a1a1a'
  assign border_color = section.settings.border_color | default: '#f3f4f6'
  assign padding_top = section.settings.padding_top | default: 64
  assign padding_bottom = section.settings.padding_bottom | default: 64
-%}

<section class="section-testimonials" style="background-color: {{ bg_color }}; --testimonial-text-color: {{ text_color }}; --testimonial-border-color: {{ border_color }}; --testimonial-padding-top: {{ padding_top }}px; --testimonial-padding-bottom: {{ padding_bottom }}px;">
  <div class="section-testimonials__container">
    <div class="section-testimonials__grid">
      {%- for block in section.blocks -%}
        <div class="section-testimonials__item" {{ block.shopify_attributes }}>
          <p class="section-testimonials__text">{{ block.settings.text }}</p>
          <p class="section-testimonials__author">â€“ {{ block.settings.author }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .section-testimonials {
    padding-top: var(--testimonial-padding-top, 4rem);
    padding-bottom: var(--testimonial-padding-bottom, 4rem);
    border-top: 1px solid var(--testimonial-border-color, #f3f4f6);
  }

  .section-testimonials__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-testimonials__grid {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    text-align: center;
  }

  .section-testimonials__item {
    flex: 1;
  }

  .section-testimonials__text {
    font-style: italic;
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    color: var(--testimonial-text-color, inherit);
  }

  .section-testimonials__author {
    font-size: 0.875rem;
    font-style: italic;
    margin: 0;
    opacity: 0.8;
    color: var(--testimonial-text-color, inherit);
  }

  @media (min-width: 768px) {
    .section-testimonials__grid {
      flex-direction: row;
      gap: 2rem;
      align-items: flex-start;
    }

    .section-testimonials__text {
      font-size: 1.25rem;
    }
  }
</style>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#f3f4f6"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial Text"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials"
    }
  ]
}
{% endschema %}
