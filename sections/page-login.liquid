{%- comment -%}
  Login-Protected Page Section
  
  This section displays content only to logged-in customers.
  Non-logged-in users see a login prompt.
{%- endcomment -%}

{%- render 'access-control', access_type: 'login' -%}

<div class="container">
  {%- if has_access -%}
    <div class="page-login__content">
      <h1 class="text-3xl md:text-4xl mb-8">{{ page.title }}</h1>
      <div class="prose max-w-none">
        {{ page.content }}
      </div>
    </div>
  {%- else -%}
    <div class="page-login__restricted">
      <h1 class="text-3xl md:text-4xl mb-4">Login Required</h1>
      <p class="text-lg text-gray mb-8">{{ access_message }}</p>
      <a href="{{ redirect_url }}" class="btn-primary">Log In</a>
    </div>
  {%- endif -%}
</div>

{% stylesheet %}
  .page-login__content {
    padding: 2rem 0;
  }
  
  .page-login__restricted {
    padding: 4rem 0;
    text-align: center;
  }
  
  .page-login__restricted h1 {
    margin-bottom: 1rem;
  }
  
  .page-login__restricted p {
    margin-bottom: 2rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Login Protected Page",
  "settings": []
}
{% endschema %}
