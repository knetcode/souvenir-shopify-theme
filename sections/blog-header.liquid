{% schema %}
{
  "name": "Blog Header",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Blog Header"
    }
  ]
}
{% endschema %}

<div class="py-8 px-6">
  <div class="container">
    <div class="mb-8">
      <h1 class="text-3xl uppercase tracking-wide mb-2">{{ blog.title }}</h1>
    </div>

    {%- if section.settings.description != blank -%}
      <p class="text-gray max-w-2xl mb-12">
        {{ section.settings.description }}
      </p>
    {%- endif -%}
  </div>
</div>
