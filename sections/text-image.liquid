{% schema %}
{
  "name": "Text Image",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Add your text content here.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "image_link",
      "label": "Image Link",
      "info": "Optional link when image is clicked"
    },
    {
      "type": "checkbox",
      "id": "image_link_new_tab",
      "label": "Open link in new tab",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#6b6b6b"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "presets": [
    {
      "name": "Text Image"
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
  assign heading_color = section.settings.heading_color | default: '#1a1a1a'
  assign text_color = section.settings.text_color | default: '#6b6b6b'
  assign padding_top = section.settings.padding_top | default: 64
  assign padding_bottom = section.settings.padding_bottom | default: 64
-%}

<section 
  class="px-6"
  style="background-color: {{ bg_color }}; padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;"
>
  <div class="container">
    <div class="grid md:grid-cols-2 gap-12 items-start">
      {%- comment -%} Text Column {%- endcomment -%}
      <div class="space-y-6">
        {%- if section.settings.heading != blank -%}
          <h2 class="text-2xl md:text-3xl font-medium" style="color: {{ heading_color }};">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.content != blank -%}
          <div class="prose prose-lg max-w-none" style="color: {{ text_color }};">
            {{ section.settings.content }}
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Image Column {%- endcomment -%}
      {%- if section.settings.image != blank -%}
        <div class="relative">
          {%- if section.settings.image_link != blank -%}
            <a href="{{ section.settings.image_link }}"{% if section.settings.image_link_new_tab %} target="_blank" rel="noopener noreferrer"{% endif %}>
              {{
                section.settings.image
                | image_url: width: 800
                | image_tag: loading: 'lazy', alt: section.settings.heading | default: 'Image', class: 'w-full h-auto object-cover'
              }}
            </a>
          {%- else -%}
            {{
              section.settings.image
              | image_url: width: 800
              | image_tag: loading: 'lazy', alt: section.settings.heading | default: 'Image', class: 'w-full h-auto object-cover'
            }}
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>
