{% schema %}
{
  "name": "Categories",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8d4ce"
    }
  ],
  "blocks": [
    {
      "type": "category_tab",
      "name": "Category Tab",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        }
      ]
    },
    {
      "type": "category_item",
      "name": "Category Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categories"
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: settings.color_pink | default: '#f8d4ce'
-%}
<section class="py-12 px-6" style="background-color: {{ bg_color }};">
  <div class="container">
    {%- assign tabs = section.blocks | where: 'type', 'category_tab' -%}
    {%- if tabs.size > 0 -%}
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8 text-sm uppercase tracking-wider">
        {%- for block in tabs -%}
          <button class="py-2 {% if forloop.first %}border-b-2 border-foreground{% else %}opacity-60 hover:opacity-100 transition-opacity{% endif %}">
            {{ block.settings.label }}
          </button>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- assign items = section.blocks | where: 'type', 'category_item' -%}
    {%- if items.size > 0 -%}
      <div class="grid md:grid-cols-4 gap-6">
        {%- for block in items -%}
          <article class="group bg-white">
            {%- if block.settings.image != blank -%}
              <div class="relative aspect-4-3 overflow-hidden">
                {{
                  block.settings.image
                  | image_url: width: 400
                  | image_tag: loading: 'lazy', alt: block.settings.title, class: 'object-cover transition-transform duration-300 group-hover:scale-105'
                }}
              </div>
            {%- endif -%}
            <div class="p-4">
              {%- if block.settings.author != blank -%}
                <p class="text-xs uppercase tracking-wider text-gray mb-1">
                  {{ block.settings.author }}
                </p>
              {%- endif -%}
              <h3 class="text-base mb-2">
                {{ block.settings.title }}
              </h3>
              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}" class="read-more text-sm">
                  Read More
                </a>
              {%- endif -%}
            </div>
          </article>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .duration-300 {
    transition-duration: 300ms;
  }
</style>
