{% schema %}
{
  "name": "Image Image",
  "settings": [
    {
      "type": "header",
      "content": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "image_1_link",
      "label": "Image Link",
      "info": "Optional link when image is clicked"
    },
    {
      "type": "checkbox",
      "id": "image_1_link_new_tab",
      "label": "Open link in new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "image_2_link",
      "label": "Image Link",
      "info": "Optional link when image is clicked"
    },
    {
      "type": "checkbox",
      "id": "image_2_link_new_tab",
      "label": "Open link in new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "presets": [
    {
      "name": "Image Image"
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
  assign padding_top = section.settings.padding_top | default: 64
  assign padding_bottom = section.settings.padding_bottom | default: 64
-%}

<section 
  class="px-6"
  style="background-color: {{ bg_color }}; padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;"
>
  <div class="container">
    <div class="grid md:grid-cols-2 gap-12">
      {%- comment -%} Image 1 {%- endcomment -%}
      {%- if section.settings.image_1 != blank -%}
        <div class="relative">
          {%- if section.settings.image_1_link != blank -%}
            <a href="{{ section.settings.image_1_link }}"{% if section.settings.image_1_link_new_tab %} target="_blank" rel="noopener noreferrer"{% endif %}>
              {{
                section.settings.image_1
                | image_url: width: 800
                | image_tag: loading: 'lazy', alt: 'Image 1', class: 'w-full h-auto object-cover'
              }}
            </a>
          {%- else -%}
            {{
              section.settings.image_1
              | image_url: width: 800
              | image_tag: loading: 'lazy', alt: 'Image 1', class: 'w-full h-auto object-cover'
            }}
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- comment -%} Image 2 {%- endcomment -%}
      {%- if section.settings.image_2 != blank -%}
        <div class="relative">
          {%- if section.settings.image_2_link != blank -%}
            <a href="{{ section.settings.image_2_link }}"{% if section.settings.image_2_link_new_tab %} target="_blank" rel="noopener noreferrer"{% endif %}>
              {{
                section.settings.image_2
                | image_url: width: 800
                | image_tag: loading: 'lazy', alt: 'Image 2', class: 'w-full h-auto object-cover'
              }}
            </a>
          {%- else -%}
            {{
              section.settings.image_2
              | image_url: width: 800
              | image_tag: loading: 'lazy', alt: 'Image 2', class: 'w-full h-auto object-cover'
            }}
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>
