    <div class="grid md:grid-cols-3 gap-8 text-center">
      {%- for block in section.blocks -%}
        <div>
          <p class="italic text-xl mb-4">{{ block.settings.text }}</p>
          <p class="text-sm">â€“ {{ block.settings.author }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>
