{% schema %}
{
  "name": "Page Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ]
}
{% endschema %}

{%- liquid
  assign bg_color = section.settings.background_color | default: '#ffffff'
-%}
<section class="py-16 px-6" style="background-color: {{ bg_color }};">
  <div class="container text-center">
    {%- if section.settings.heading != blank -%}
      <h1 class="text-4xl md:text-5xl italic mb-12">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}
    
    {%- if section.settings.image != blank -%}
      <div class="relative aspect-video max-w-2xl mx-auto mb-12 overflow-hidden">
        {{
          section.settings.image
          | image_url: width: 800
          | image_tag: loading: 'lazy', alt: section.settings.heading, class: 'object-cover'
        }}
      </div>
    {%- endif -%}

    {%- if section.settings.description != blank -%}
      <div class="max-w-xl mx-auto">
        <p class="text-xl md:text-2xl italic leading-relaxed">
          {{ section.settings.description }}
        </p>
      </div>
    {%- endif -%}
  </div>
</section>
