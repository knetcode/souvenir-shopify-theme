{% schema %}
{
  "name": "Previous Editions",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Previous Editions"
    }
  ],
  "blocks": [
    {
      "type": "category_tab",
      "name": "Category Tab",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        }
      ]
    },
    {
      "type": "edition_item",
      "name": "Edition Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="py-12 border-t border-gray-100">
  <div class="container">
    <h2 class="text-2xl mb-8 uppercase tracking-wide">{{ section.settings.heading }}</h2>

    {%- assign tabs = section.blocks | where: 'type', 'category_tab' -%}
    {%- if tabs.size > 0 -%}
      <div class="flex gap-8 mb-8 text-sm uppercase tracking-wider overflow-x-auto">
        {%- for block in tabs -%}
          <button class="py-2 {% if forloop.first %}border-b-2 border-foreground whitespace-nowrap{% else %}opacity-60 hover:opacity-100 transition-opacity whitespace-nowrap{% endif %}">
            {{ block.settings.label }}
          </button>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- assign items = section.blocks | where: 'type', 'edition_item' -%}
    {%- if items.size > 0 -%}
      <div class="grid md:grid-cols-4 gap-6">
        {%- for block in items -%}
          <article class="group">
            {%- if block.settings.image != blank -%}
              <div class="relative aspect-4-3 overflow-hidden mb-4">
                {{
                  block.settings.image
                  | image_url: width: 400
                  | image_tag: loading: 'lazy', alt: block.settings.title, class: 'object-cover transition-transform duration-300 group-hover:scale-105'
                }}
              </div>
            {%- endif -%}
            {%- if block.settings.author != blank -%}
              <p class="text-xs uppercase tracking-wider text-gray mb-1">
                {{ block.settings.author }}
              </p>
            {%- endif -%}
            <h3 class="text-base mb-2">
              {{ block.settings.title }}
            </h3>
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="read-more text-sm">
                Read More
              </a>
            {%- endif -%}
          </article>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>
