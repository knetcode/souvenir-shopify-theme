{% schema %}
{
  "name": "Search",
  "settings": []
}
{% endschema %}

<div class="py-8 px-6">
  <div class="container">
    <h1 class="text-3xl mb-8">
      {%- if search.performed -%}
        {{ 'general.search.results_for' | t: terms: search.terms }}
      {%- else -%}
        {{ 'general.search.title' | t | default: 'Search' }}
      {%- endif -%}
    </h1>

    <form action="{{ routes.search_url }}" method="get" class="mb-8">
      <input
        type="search"
        name="q"
        value="{{ search.terms }}"
        placeholder="{{ 'general.search.placeholder' | t | default: 'Search...' }}"
        class="newsletter-input"
        id="search"
      >
      <button type="submit" class="btn-primary mt-4">
        {{ 'general.search.submit' | t | default: 'Search' }}
      </button>
    </form>

    {%- if search.performed -%}
      {%- if search.results.size > 0 -%}
        <div class="grid md:grid-cols-4 gap-6">
          {%- for item in search.results -%}
            <article>
              <a href="{{ item.url }}">
                {%- if item.featured_image != blank -%}
                  <div class="relative aspect-4-3 overflow-hidden mb-4">
                    {{
                      item.featured_image
                      | image_url: width: 400
                      | image_tag: loading: 'lazy', alt: item.title, class: 'object-cover'
                    }}
                  </div>
                {%- endif -%}
                <h3 class="text-base mb-2">{{ item.title }}</h3>
                {%- if item.price -%}
                  <p class="text-gray">
                    {%- if item.price == 0 -%}
                      FREE
                    {%- else -%}
                      {{ item.price | money }}
                    {%- endif -%}
                  </p>
                {%- endif -%}
              </a>
            </article>
          {%- endfor -%}
        </div>
      {%- else -%}
        <p class="text-gray">{{ 'general.search.no_results' | t }}</p>
      {%- endif -%}
    {%- endif -%}
  </div>
</div>
