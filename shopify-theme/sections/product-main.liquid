{% schema %}
{
  "name": "Product Main",
  "settings": [
    {
      "type": "text",
      "id": "free_product_message",
      "label": "Free Product Message",
      "default": "This itinerary is currently available for free during our MVP launch.",
      "info": "Message displayed when product price is $0.00"
    }
  ]
}
{% endschema %}

<div class="py-8 px-6">
  <div class="container">
    {%- if product.type != blank -%}
      <p class="text-gray mb-8">{{ product.type }}</p>
    {%- endif -%}

    {%- comment -%} Product Section {%- endcomment -%}
    <div class="grid md:grid-cols-2 gap-12 mb-16">
      {%- comment -%} Product Info {%- endcomment -%}
      <div>
        <h1 class="text-3xl md:text-4xl mb-2">{{ product.title }}</h1>

        {%- comment -%} Price Display - Free or Regular {%- endcomment -%}
        <div class="mb-6">
          {%- if product.price == 0 -%}
            {%- comment -%} FREE: Show Free label {%- endcomment -%}
            <p class="text-2xl font-bold">Free</p>
          {%- else -%}
            {%- comment -%} REGULAR: Show normal price {%- endcomment -%}
            <p class="text-2xl">{{ product.price | money }}</p>
          {%- endif -%}
        </div>

        {%- comment -%} Product Form - Only show if product has a price {%- endcomment -%}
        {%- if product.price > 0 -%}
          {% form 'product', product, id: 'product-form' %}
            {%- comment -%} Variants {%- endcomment -%}
            {%- unless product.has_only_default_variant -%}
              {%- for option in product.options_with_values -%}
                <div class="mb-6">
                  <p class="text-sm uppercase tracking-wide mb-3">{{ option.name }}</p>
                  <div class="flex gap-3">
                    {%- for value in option.values -%}
                      <input
                        type="radio"
                        id="option-{{ option.position }}-{{ forloop.index0 }}"
                        name="options[{{ option.name }}]"
                        value="{{ value }}"
                        {% if option.selected_value == value %}
                          checked
                        {% endif %}
                        class="variant-option"
                      >
                      <label
                        for="option-{{ option.position }}-{{ forloop.index0 }}"
                        class="variant-label"
                      >
                        {{ value }}
                      </label>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endfor -%}
            {%- endunless -%}

            {%- comment -%} Quantity {%- endcomment -%}
            <div class="mb-6">
              <p class="text-sm uppercase tracking-wide mb-3">Qty</p>
              <div class="flex items-center gap-4">
                <button
                  type="button"
                  class="w-8 h-8 border border-gray-300 flex items-center justify-center hover:border-foreground quantity-decrease"
                >
                  -
                </button>
                <input
                  type="number"
                  name="quantity"
                  value="1"
                  min="1"
                  class="quantity-input text-center w-12"
                  id="quantity"
                >
                <button
                  type="button"
                  class="w-8 h-8 border border-gray-300 flex items-center justify-center hover:border-foreground quantity-increase"
                >
                  +
                </button>
              </div>
            </div>

            {%- comment -%} Add to Cart Button {%- endcomment -%}
            <button
              type="submit"
              class="w-full bg-foreground text-white py-4 text-sm uppercase tracking-wide hover:bg-transparent hover:text-foreground border border-foreground transition-colors mb-8"
            >
              Add to Cart
            </button>
          {% endform %}
        {%- else -%}
          {%- comment -%} FREE PRODUCT: Show message instead of form {%- endcomment -%}
          {%- assign free_message = section.settings.free_product_message | default: "This itinerary is currently available for free during our MVP launch." -%}
          <div class="mb-8 p-4 bg-gray-50 border border-gray-200">
            <p class="text-sm text-gray-600">{{ free_message }}</p>
          </div>
        {%- endif -%}

        {%- comment -%} Product Description (non-accordion content) {%- endcomment -%}
        {%- if product.description != blank -%}
          <div class="product-description-intro text-gray">
            {{ product.description }}
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Product Images {%- endcomment -%}
      <div>
        {%- if product.featured_image != blank -%}
          <div class="relative aspect-square overflow-hidden mb-4">
            {{
              product.featured_image
              | image_url: width: 600
              | image_tag: loading: 'eager', alt: product.title, class: 'object-cover', id: 'product-image-main'
            }}
          </div>
        {%- endif -%}

        {%- if product.images.size > 1 -%}
          <div class="flex gap-2">
            {%- for image in product.images limit: 5 -%}
              <button
                class="relative w-16 h-16 overflow-hidden border-2 border-transparent hover:border-foreground product-thumbnail"
                data-image-url="{{ image | image_url: width: 600 }}"
              >
                {{
                  image
                  | image_url: width: 100
                  | image_tag: loading: 'lazy', alt: product.title, class: 'object-cover'
                }}
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Full-width Accordion Section {%- endcomment -%}
    {%- if product.description != blank -%}
      <div class="product-description-accordion-container">
        <div class="product-description-accordion text-gray">
          {{ product.description }}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const thumbnails = document.querySelectorAll('.product-thumbnail');
    const mainImage = document.getElementById('product-image-main');

    thumbnails.forEach((thumb) => {
      thumb.addEventListener('click', function () {
        const imageUrl = this.getAttribute('data-image-url');
        if (mainImage && imageUrl) {
          mainImage.src = imageUrl;
        }
      });
    });

    const quantityInput = document.getElementById('quantity');
    const decreaseBtn = document.querySelector('.quantity-decrease');
    const increaseBtn = document.querySelector('.quantity-increase');

    if (decreaseBtn && quantityInput) {
      decreaseBtn.addEventListener('click', function () {
        const current = parseInt(quantityInput.value) || 1;
        quantityInput.value = Math.max(1, current - 1);
      });
    }

    if (increaseBtn && quantityInput) {
      increaseBtn.addEventListener('click', function () {
        const current = parseInt(quantityInput.value) || 1;
        quantityInput.value = current + 1;
      });
    }
  });

  // Convert h5 tags in product description to accordions
  (function() {
    const introContainer = document.querySelector('.product-description-intro');
    const accordionContainer = document.querySelector('.product-description-accordion');
    if (!accordionContainer) return;

    const h5Elements = accordionContainer.querySelectorAll('h5');
    if (h5Elements.length === 0) {
      // No h5s found, hide the accordion container
      const container = document.querySelector('.product-description-accordion-container');
      if (container) container.style.display = 'none';
      return;
    }

    // Remove h5s and their content from intro container
    if (introContainer) {
      const introH5s = introContainer.querySelectorAll('h5');
      introH5s.forEach(h5 => {
        let node = h5.nextSibling;
        // Remove h5 and all following content until next h5 or end
        while (node) {
          const nextH5 = node.nodeType === 1 && node.tagName === 'H5';
          if (nextH5) break;
          const nextNode = node.nextSibling;
          node.remove();
          node = nextNode;
        }
        h5.remove();
      });
    }

    // Create accordion wrapper
    const accordionWrapper = document.createElement('div');
    accordionWrapper.className = 'itinerary-accordion';
    
    let isFirst = true;
    const h5Array = Array.from(h5Elements);

    // Process each h5 and its following content
    h5Array.forEach((h5, index) => {
      // Create accordion item
      const accordionItem = document.createElement('div');
      accordionItem.className = 'accordion-item';
      
      // Create button from h5
      const button = document.createElement('button');
      button.className = 'accordion-button';
      button.type = 'button';
      button.setAttribute('aria-expanded', isFirst ? 'true' : 'false');
      button.innerHTML = `
        <span>${h5.textContent}</span>
        <svg class="accordion-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 9l6 6 6-6" />
        </svg>
      `;
      
      // Create content panel
      const panel = document.createElement('div');
      panel.className = 'accordion-panel';
      panel.style.display = isFirst ? 'block' : 'none';
      
      // Collect content between this h5 and the next h5 (or end)
      let node = h5.nextSibling;
      const nodesToMove = [];
      
      while (node) {
        const nextH5 = node.nodeType === 1 && node.tagName === 'H5';
        if (nextH5) break;
        
        nodesToMove.push(node);
        node = node.nextSibling;
      }
      
      // Move nodes to panel
      nodesToMove.forEach(n => panel.appendChild(n));
      
      // Remove the h5 from original
      h5.remove();
      
      // Assemble accordion item
      accordionItem.appendChild(button);
      accordionItem.appendChild(panel);
      accordionWrapper.appendChild(accordionItem);
      
      // Add click handler
      button.addEventListener('click', function() {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        const panel = this.nextElementSibling;
        
        // Close all other panels
        accordionWrapper.querySelectorAll('.accordion-button').forEach(btn => {
          if (btn !== this) {
            btn.setAttribute('aria-expanded', 'false');
            btn.nextElementSibling.style.display = 'none';
          }
        });
        
        // Toggle current panel
        this.setAttribute('aria-expanded', !isExpanded);
        panel.style.display = !isExpanded ? 'block' : 'none';
      });
      
      isFirst = false;
    });
    
    // Replace original content with accordion
    accordionContainer.innerHTML = '';
    accordionContainer.appendChild(accordionWrapper);
  })();
</script>

<style>
  .variant-option {
    display: none;
  }

  .variant-label {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--gray-200);
    cursor: pointer;
    transition: border-color 0.2s;
  }

  .variant-option:checked + .variant-label,
  .variant-label:hover {
    border-color: var(--foreground);
  }

  .w-full {
    width: 100%;
  }

  .w-12 {
    width: 3rem;
  }

  .h-8 {
    height: 2rem;
  }

  /* Accordion Container - Full Width */
  .product-description-accordion-container {
    width: 100%;
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: none;
  }

  /* Accordion Styles */
  .itinerary-accordion {
    max-width: 100%;
  }

  .accordion-item {
    border-bottom: 1px solid var(--gray-200);
  }

  .accordion-button {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 0;
    text-align: left;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
    font-size: 1rem;
    color: var(--foreground);
    transition: opacity 0.2s ease;
  }

  .accordion-button:hover {
    opacity: 0.7;
  }

  .accordion-button span {
    font-weight: 500;
  }

  .accordion-icon {
    flex-shrink: 0;
    margin-left: 1rem;
    transition: transform 0.3s ease;
  }

  .accordion-button[aria-expanded="true"] .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-panel {
    padding-bottom: 1.25rem;
    padding-left: 0;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .accordion-panel p,
  .accordion-panel ul,
  .accordion-panel ol {
    margin-bottom: 1rem;
  }

  .accordion-panel p:last-child,
  .accordion-panel ul:last-child,
  .accordion-panel ol:last-child {
    margin-bottom: 0;
  }
</style>
