{%- comment -%}
  Category Card snippet for displaying category items
  
  Parameters:
  - image: Image object or URL
  - title: Card title
  - description: Optional description
  - author: Optional author/author label
  - href: Link URL
{%- endcomment -%}

<a href="{{ href }}" class="group block">
  {%- if image != blank -%}
    <div class="relative aspect-4-3 overflow-hidden mb-4">
      {%- if image contains 'http' -%}
        <img src="{{ image }}" alt="{{ title }}" class="object-cover transition-transform duration-300 group-hover:scale-105">
      {%- else -%}
        {{
          image
          | image_url: width: 400
          | image_tag: loading: 'lazy', alt: title, class: 'object-cover transition-transform duration-300 group-hover:scale-105'
        }}
      {%- endif -%}
    </div>
  {%- endif -%}
  
  {%- if author != blank -%}
    <p class="text-xs uppercase tracking-wider text-gray mb-1">
      {{ author }}
    </p>
  {%- endif -%}
  
  <h3 class="text-base mb-2">
    {{ title }}
  </h3>
  
  {%- if description != blank -%}
    <p class="text-sm text-gray line-clamp-2">{{ description }}</p>
  {%- endif -%}
  
  <span class="read-more mt-2 inline-block text-sm">Read More</span>
</a>
